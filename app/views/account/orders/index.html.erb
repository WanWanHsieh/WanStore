<h2>訂單列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>編號</th>
      <th>訂購人</th>
      <th>訂單狀態</th>
      <th>建立時間</th>
    </tr>
  </thead>
  <tbody>

    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to(order.id, order_path(order.token)) %> </td>
      <td> <%= order.billing_name %> </td>
      <td> <%= order.aasm_state %> </td>
      <td> <%= order.created_at.to_s(:long) %> </td>
    </tr>
    <% end %>

  </tbody>
</table>